/* profile.wxss */

.user-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 50px 20px;
}
.user-wrapper .user-name {
  height: 68px;
  line-height: 68px;
  text-align: left;
  font-size: 28px;
  color: #333;
  font-weight: bold;
  position: relative;
}
.user-wrapper .name-underline {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 3px;
  background-color: #DC4950;
  width: 70%;
}

.bar-wrapper {
  padding: 0 20px;
}
.bar-wrapper .my-order {
  
}
.bar-wrapper .my-order .my-order-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #333;
}
.bar-wrapper .my-order .order-all {
  font-size: 14px;
  color: #DC4950;
}
.bar-wrapper .my-order .no-order {
  font-size: 13px;
  color: #999999;
  padding-top: 10px;
  padding-bottom: 20px;
  border-bottom: 1px solid #F6F6F6;
}
.bar-wrapper .my-order .order-list-swiper {
  padding-top: 10px;
  padding-bottom: 20px;
  border-bottom: 1px solid #F6F6F6;
}
.bar-wrapper .my-order .order-list-swiper .scroll-view_H {
  width: 100%;
  white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
 .bar-wrapper .my-order .order-list-swiper .item-each {
  background: #FFFFFF;
  border: 1px solid #F6F6F6;
  box-shadow: 0 2px 10px 0 rgba(213,213,213,0.50);
  border-radius: 4px;
  width: 237px;
  height: 181px;
  display: inline-block;
  margin-right: 15px;
} 
.order-list-swiper .item-each  .item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #E9E9E9;
  font-size: 11px;
  color: #666666;
  padding: 12px 15px;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}
.order-status-finished {
  font-size: 13px;
  color: #333;
}
.oder-status-cancel {
  font-size: 13px;
  color: #999999;
}
.order-status-wait-pay {
  font-size: 13px;
  color: #E40606;
}

.order-list-swiper .item-each .item-body {
  padding: 10px 15px;
  border-bottom: 1px solid #F6F6F6;
}
.order-list-swiper .item-each .item-body .item-body-each {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 5px;
  font-size: 13px;
  color: #999999;
}
.order-list-swiper .item-each .item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  color: #333333;
  padding: 12px 15px;
}
.order-list-swiper .item-each .item-footer .footer-again-btn {
  border: 1px solid #D6D6D6;
  border-radius: 100px;
  font-size: 13px;
  color: #333333;
  width: 83px;
  height: 30px;
  line-height: 28px;
  text-align: center;
}
.order-list-swiper .item-each .item-footer .footer-pay-btn {
  font-size: 13px;
  color: #FFFFFF;
  width: 83px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background: #DC4950;
  border-radius: 100px;
}

.bar-wrapper .bar-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #333;
  padding-top: 20px;
  padding-bottom: 20px;
  border-bottom: 1px solid #F6F6F6;
}
.bar-wrapper .bar-list .arrow-right {
  font-size: 14px;
  color: #999999; 
}
.bar-wrapper .bar-list .arrow-right::after{
  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
  border-top: 1px solid #D6D6D6;
  border-right: 1px solid #D6D6D6;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}