/* components/promptBox/promptBox.wxss */
.prompt-box-wrap {

}
.prompt-box-wrap .prompt-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.prompt-box-wrap .prompt-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: rgba(255, 255, 255, 0.9);
  text-align: center;
  border-radius: 13px;
  overflow: hidden;
}
.prompt-box-wrap .prompt-dialog .dialog-title {
  font-size: 18px;
  color: #000000;
  padding: 15px 15px 5px;
}
.prompt-box-wrap .prompt-dialog .dialog-content {
  padding: 15px 15px 5px;
  min-height: 40px;
  font-size: 14px;
  color: #111111;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
}
.prompt-box-wrap .prompt-dialog .dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 16px;
  color: #666666;
}
.prompt-box-wrap .prompt-dialog .dialog-footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.prompt-box-wrap .prompt-dialog .dialog-footer .dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  font-size: 17px;
}
.prompt-box-wrap .prompt-dialog .dialog-footer .dialog-btn:nth-of-type(1) {
  /* color: #353535; */
  color: #0076FF;
}
.prompt-box-wrap .prompt-dialog .dialog-footer .dialog-btn:nth-of-type(2) {
  /* color: #40CBAF; */
  color: #0076FF;
}
.prompt-box-wrap .prompt-dialog .dialog-footer .dialog-btn:nth-of-type(2)::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}