/* pages/MenuAdd/MenuAdd.wxss */
.menu-add-wrapper {
  padding: 20rpx 40rpx 40rpx 40rpx;
}
.menu-add-wrapper .menu-add-title {
  font-size: 44rpx;
  color: #333333;
  padding-bottom: 30rpx;
  font-weight: bold; 
}
.input-wrap {
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  border-bottom: 2rpx solid #F6F6F6;
}
.menu-add-wrapper .input-wrap .name {
  font-size: 32rpx;
  color: #333333;
  padding-bottom: 20rpx;
  font-weight: bold; 
}
.menu-add-wrapper .input-wrap .name-input {
  font-size: 40rpx;
  color: #333333;
}
.menu-add-wrapper .input-wrap .name-input:placeholder {
  font-size: 40rpx;
  color: #BDBDBD;
}

.menu-add-wrapper .category-wrap {
  padding-top: 50rpx;
}
.menu-add-wrapper .category-wrap .name {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.category-wrap .cate-list {
  display: flex;
  justify-content: flex-start; 
  align-items: center;
  flex-wrap: wrap;
}
.category-wrap .cate-list .item {
  border: 2rpx solid #BDBDBD;
  border-radius: 4rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
  width: 180rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
.category-wrap .cate-list .item-add {
  margin-top: 30rpx;
  border: 2rpx solid #5B9DEA;
  border-radius: 4rpx;
   width: 180rpx;
  height: 72rpx;
  line-height: 64rpx;
  color: #4A90E2;
  text-align: center;
}

.menu-add-wrapper .image-upload-wrap {
  padding-top: 50rpx;
}
.menu-add-wrapper .image-upload-wrap .image-upload-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.menu-add-wrapper .image-upload-wrap .image-upload {
  margin-top: 30rpx;
  border: 2rpx solid #5B9DEA;
  border-radius: 8rpx;
  width: 270rpx;
  height: 180rpx;
  line-height: 180rpx;
  color: #4A90E2;
  text-align: center;
}
.menu-add-wrapper .image-upload-wrap .replace {
  font-size: 28rpx;
  color: #4A90E2;
  margin-left: 20rpx;
}

.btn-wrap {
  padding: 80rpx 24rpx 40rpx 28rpx;
}
.confirm-add {
  background: #5B9DEA;
  border-radius: 200rpx;
  text-align: center;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  font-size: 34rpx;
  color: #FFFFFF;
}


/*添加分类框  */
.edit-box-wrap .edit-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(51, 51, 51, 0.6);
}
.edit-box-wrap .edit-body {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 4px;
  overflow: hidden;
  padding-bottom: 25px;
}
.edit-box-wrap .edit-body .edit-title {
  font-size: 16px;
  color: #333333;
  padding-top: 30px;
  padding-bottom: 20px;
  position: relative;
}
.edit-box-wrap .edit-body .edit-title .box-close {
  position: absolute;
  top: 12px;
  right: 15px;
  color: #999999;
}

.edit-box-wrap .edit-body .edit-content {
  padding-left: 20px;
  padding-right: 20px;
  position: relative;
}
.edit-box-wrap .edit-body .edit-content .edit-input {
  background: #FFFFFF;
  border: 1px solid #ECECEC;
  border-radius: 3px;
  padding: 19px 15px;
  text-align: left;
}
.edit-box-wrap .edit-body .edit-content .delete {
  position: absolute;
  right: 36px;
  top: 31%;
  font-size: 20px;
  color: #CCCCCC; 
  z-index: 888;
}

.edit-body .btn-wrap {
  padding: 25px 25px 0 25px;
}
.edit-body .btn-wrap .confirm-btn {
  background: #5B9DEA;
  border-radius: 92px;
  font-size: 16px;
  color: #FFFFFF;
  text-align: center;
  padding-top: 11px;
  padding-bottom: 11px;
}


